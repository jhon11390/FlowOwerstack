<div class="container mt-4">
  <div class="row">
    <div class="col">
      <%= link_to 'Volver', questions_path %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div class="jumbotron">
        <p class="card-text text-muted">Publicado por <%= @question.user.email%></p>
        <h1 class="display-4"><%= @question.title.capitalize %></h1>
        <div class="row">
          <div class="col-2 text-center align-self-center">
            <h4 class="text-muted">Votos</h4>
          </div>
          <div class="col-10">
            <p class="lead"><%= @question.body.capitalize %></p>
          </div>
        </div>
        <hr class="my-4">
        <div class="row">
          <div class="col-2 text-center align-self-center">
            <h4 class="text-muted"></h4>
          </div>
          <div class="col">
            <h4>Comentarios:</h4>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <h4>Repuestas:</h4>
    </div>
  </div>
</div>