<div class="container mt-4">
  <div class="row">
    <div class="col">
      <h1>Preguntas</h1>
    </div>
  </div>
  <div class="row justify-content-end">
    <% if signed_in? %>
      <div class="col-2">
        <%= link_to 'Hacer Pregunta', new_question_path, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <div class="row mt-4">
    <div class="col">
      <table class="table table-sm">
        <tbody>
          <% @questions.each do |question|%>
            <tr>
              <td class="text-center" scope="1">
                <h4 class="font-weight-bold"><%= question.vote_questions.length %></h4>
                <p class="text-muted">Votos</p>
              </td>
              <td class="text-center" scope="1">
                <h4 class="font-weight-bold"><%= question.answers.length %></h4>
                <p class="text-muted">Respuesta</p>
              </td>
              <td>
                <h4 ><%= link_to question.title, question_path(question.id), class: "text-danger"%></h4>
                <p class="text-muted">Pregunt√≥ <%= question.user.email %> hace <%= time_ago_in_words(question.created_at)%></p>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>