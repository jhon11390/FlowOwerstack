<div class="container mt-4">
  <div class="row">
    <div class="col">
      <h1>Preguntas</h1>
    </div>
  </div>
  <div class="row justify-content-end">
    <div class="col-2">
      <button class="btn btn-primary">Hacer Pregunta</button>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col">
      <table class="table table-sm">
        <tbody>
          <% @questions.each do |question|%>
            <tr>
              <td class="text-center" scope="1">
                <h4 class="font-weight-bold">0</h4>
                <p class="text-muted">Votos</p>
              </td>
              <td class="text-center" scope="1">
                <h4 class="font-weight-bold">0</h4>
                <p class="text-muted">Respuesta</p>
              </td>
              <td>
                <h4 ><%= link_to question.title, question_path(question.id), class: "text-danger"%></h4>
                <p class="text-muted">Esta es la descripcion de la pregunta</p>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>